{% from 'SyliusResourceBundle:Macros:actions.html.twig' import create %}

<form action="{{ path('app_card_comment_create', {'boardId': card.boardList.board.id, 'boardListId': card.boardList.id, 'id': card.id}) }}" method="post" class="form-horizontal app_comment_create" >
    <h3>{{ 'Add new comment' }}</h3>
    {{ form_errors(comment_form) }}
    {% include ':Comment:_form.html.twig' %}
    <div class="form-actions">
        <button type="submit" class="btn btn-primary btn-lg"><i class="icon-ok"></i> {{ 'sylius.create'|trans }}</button>
        <a href="{{ path('app_board_show', {'boardId': card.boardList.board.id}) }}" class="btn btn-danger btn-lg"><i class="icon-remove"></i> {{ 'sylius.cancel'|trans }}</a>
    </div>
</form>