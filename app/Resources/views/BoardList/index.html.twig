{% extends "layout.html.twig" %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}

{% block body %}
    <div class="page-header">
        <div class="actions-menu pull-right">
            {{ buttons.create(path('app_board_list_create'), 'Add list') }}
        </div>
        <h1><i class="glyphicon glyphicon-cog"></i> {{ 'Lists' }}</h1>
    </div>

    {% for list in lists %}
        <a class="list" id="id{{list.id}}" href="#">
            <h2 style="float: left;">{{ list.name }}</h2>
            <div class="pull-right">
                <button type="submit" class="btn btn-danger btn-confirm list-delete-event">
        			<i class="glyphicon glyphicon-trash"></i> <span>Delete</span>
    			</button>
            </div>
        </a>
    {% endfor %}
    <div class="list new" id="list-add-event">
        <h2 style="float: left;">Create new list...</h2>
        <div class="pop-up">
        	<h3>Create list<span id="popup-close-event">x</span></h3>
				<input placeholder="Name" type="text" id="new-list-name" class="input-lg" required="required" name="app_list[name]" id="app_list_name">
				<div>
				    <button class="btn btn-primary btn-lg" id="new-list-event"><i class="icon-ok"></i> Create</button>
				    <a class="btn btn-danger btn-lg" href=""><i class="icon-remove"></i> Cancel</a>
				</div>
			</form>
        </div>
	</div>
{% endblock %}