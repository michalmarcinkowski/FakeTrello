  <a class="board" id="id{{board.id}}" href="{{ path('app_board_show', { 'boardId': board.id}) }}">
      <h2 style="float: left;">{{ board.name }}
          {# too much logic in a template, should be replaced by twig helper, but we don't care in this project :) #}
          {# check if board is already starred #}
          {% set starred = false %}
          {% for starredBoard in app.user.starredBoards if starredBoard.id == board.id %}
              {% set starred = true %}
          {% endfor %}
          {# display appriopriate link #}
          {% if starred == true %}
              <span class="icon-star star icon" data-href="{{ path('app_board_unstar', {'id': board.id}) }}"></span>
          {% else %}
              <span class="icon-star-empty star icon" data-href="{{ path('app_board_star', {'id': board.id}) }}"></span>
          {% endif %}
          <span class="icon-cog icon" data-href="{{ path('app_board_update', {'id': board.id}) }}"></span>
          <span class="icon-trash board-delete-event icon"></span>
          <span class="line"></span>
      </h2>
  </a>
