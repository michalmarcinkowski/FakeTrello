{% extends "layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/pages/register.css') }}" media="screen"/>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	<script>
		$('form label').each(function(){
			$(this).parent().find('input').attr('placeholder',$(this).html().slice(0,-1));
			$(this).remove();
		});
	</script>
{% endblock %}

{% block body %}
<div class="container">
	<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
	    <h2 class="form-register-heading">Register now</h2>
	    {{ form_widget(form) }}
	    <div>
	        <input type="submit" class="btn btn-large btn-primary" value="{{ 'registration.submit'|trans }}" />
	    </div>
	</form>
</div>


{% endblock %}
